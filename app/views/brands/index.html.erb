<h1 class="title is-1">Brands</h1>

<div class="columns is-multiline" id="genres">
  <% @brands.each do |brand| %>
    <div class="column is-one-third">
      <div class="box">
        <p class="subtitle is-4">
          <%= link_to brand.name, brand, class: "has-text-info" %>
        </p>
      </div>
    </div>
  <% end %>
</div>